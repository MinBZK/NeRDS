{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "NeRDS Action Registry Schema",
    "description": "Schema definition for the NeRDS Action Registry (actions.yaml)",
    "type": "object",
    "required": ["actions"],
    "properties": {
      "actions": {
        "type": "array",
        "description": "Array of all available actions",
        "items": {
          "type": "object",
          "required": ["id", "name", "description", "richtlijn", "type", "action", "date_added", "status"],
          "properties": {
            "id": {
              "type": "string",
              "description": "Unique identifier for the action (kebab-case)"
            },
            "name": {
              "type": "string",
              "description": "Display name of the action"
            },
            "source": {
              "type": ["string", "null"],
              "description": "URL or external link to the action resource. null if not available"
            },
            "description": {
              "type": "string",
              "description": "Short description of what the action provides"
            },
            "richtlijn": {
              "type": "string",
              "description": "Guideline category this action belongs to",
              "enum": [
                "gebruikersbehoeften",
                "toegankelijkheid",
                "open-source",
                "open-standaarden",
                "cloud",
                "veiligheid",
                "privacy",
                "samenwerking",
                "integratie",
                "data",
                "algoritmen",
                "inkoop",
                "duurzaamheid",
                "servicestandaard"
              ]
            },
            "type": {
              "type": "string",
              "description": "Category type of the action",
              "enum": ["beleid", "register", "tool", "handleiding", "form"]
            },
            "action": {
              "type": "string",
              "description": "Action label/button text",
              "enum": [
                "Verkennen",
                "Registreren",
                "Starten",
                "Aanmaken",
                "Bekijken",
                "Aanvragen",
                "Leren",
                "Ontdekken",
                "Scannen",
                "Gebruiken",
                "Testen",
                "Downloaden",
                "Deelnemen",
                "Toepassen",
                "Berekenen",
                "Zoeken",
                "Publiceren"
              ]
            },
            "date_added": {
              "type": "string",
              "description": "Date when the action was added (DD-MM-YYYY format)",
              "pattern": "^\\d{2}-\\d{2}-\\d{4}$"
            },
            "status": {
              "type": "string",
              "description": "Current status/availability of the action",
              "enum": ["beschikbaar", "concept", "ontwikkeling"]
            },
            "component": {
              "type": "string",
              "description": "Optional component identifier for form-type actions"
            }
          },
          "additionalProperties": false
        }
      }
    },
    "additionalProperties": false
  }